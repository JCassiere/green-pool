<div class="form-group" align="center">
<%= form_tag '/login' do %>

	<%= label_tag :email %>
	<%= text_field_tag :email, "", class: "form-control col-8 mb-4" %>

  <%= label_tag :password %>
  <%= password_field_tag :password, "", class: "form-control col-8 mb-4" %>

  <%= submit_tag "Login2", class: "btn btn-primary col-8 mb-4" %></br>
  <%= link_to "Need an account? SignUp now", signup_path %>

<% end %>
</div>
