<%= flash.alert %>

<div class="container">
	<div class="row align-items-center">
		<div class="col align-self-center" id="vert">
			<div class="form-group col-10" align="center">
				<%= form_tag '/login' do %>
					<%= label_tag :email %>
					<%= text_field_tag :email, "", class: "form-control mb-4" %>
				  
				  	<%= label_tag :password %>
				  	<%= password_field_tag :password, "", class: "form-control mb-4" %>

				  <%= submit_tag "Login", class: "btn btn-primary col-12 mb-4" %></br>
				  <%= link_to "Need an account? SignUp now", signup_path %>

				<% end %>
			</div>	
		</div>
	</div>
</div>