<!-- <h1 class="mb-4" align="center"><strong>Signup</strong></h1> -->

<%= form_for :user, url: '/users' do |f| %>

  <div class="field mt-4" align="center">
	  <%= f.label :first_name, "First Name" %>
	  <%= f.text_field :first_name, class: "form-control col-8 mb-4" %>
  </div>

	<div class="field" align="center">
	  <%= f.label :last_name, "Last Name" %>
	  <%= f.text_field :last_name, class: "form-control col-8 mb-4" %>
  </div>

  <div class="field" align="center">
	  <%= f.label :email %>
		<%= f.text_field :email, class: "form-control col-8 mb-4" %>
  </div>

  <div class="field" align="center">
	  <%= f.label :password %>
	  <%= f.password_field :password, class: "form-control col-8 mb-4" %>
  </div>

  <div class="field" align="center">
	  <%= f.label :password_confirmation, "Password Confirmation" %>
	  <%= f.password_field :password_confirmation, class: "form-control col-8 mb-4" %>
  </div>

  <div class="field">
    <%= f.label :street %>
    <%= f.text_field :street %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  
  <div class="field">
    <%= f.label :zip_code, "Zip/Postal Code" %>
    <%= f.text_field :zip_code %>
  </div>

  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <div class="field" align="center">
  	<%= f.label :avatar, "Profile Picture" %>
	  <%= f.file_field :avatar, class: "form-control col-8 mb-4 btn-light" %>
  </div>

  <div class="action" align="center">
	  <button class="btn col-8"><%= f.submit "Submit", class: "btn" %></button>
  </div>

<% end %>