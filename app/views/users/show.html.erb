
<h1>Users#show</h1>
<p>Hello, <%=@user.first_name%>!</p>

<h3>Trips</h3>
<% @trips.each do |t| %>
  <% t.pickups.each do |x| %>
    <p>Driver Pick ups pending: <%=x.id%></p>
  <%end%>
<%end%>

<% @user.recycling_pickups.each do |t| %>
  <p>Recycling Pick ups pending: <%=t.id%></p>
<%end%>

<p>Credit count: <%= @user.credit_count%></p>

<h3>Trips</h3>
<% @user.trips.each do |trip| %>
	<p>
		<%= trip.pickup_time.strftime("%B %e, %Y at %l:%M %p") %>
		<%= link_to "View Trip", trips_show_path(trip.id) %>
	</p>
<% end %>
